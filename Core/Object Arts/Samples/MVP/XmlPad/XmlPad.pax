package!

"Class Definitions"!

UI.TextDocument subclass: #XmlPad
	instanceVariableNames: 'viewOptions'
	classVariableNames: ''
	imports: #(#{MSXML private})
	classInstanceVariableNames: ''
	classConstants: {
		'RememberPlacementMask' -> 16r1
	}!
UI.RuntimeSessionManager subclass: #XmlPadSessionManager
	instanceVariableNames: ''
	classVariableNames: ''
	imports: #()
	classInstanceVariableNames: ''
	classConstants: {}!

"Loose Methods"!

!MSXML.IXMLDOMComment methodsFor!

formatAsText
	^false! !
!MSXML.IXMLDOMComment categoriesFor: #formatAsText!public! !

!MSXML.IXMLDOMEntityReference methodsFor!

formatAsText
	^true! !
!MSXML.IXMLDOMEntityReference categoriesFor: #formatAsText!public! !

!MSXML.IXMLDOMNode methodsFor!

formatAsText
	^self isText! !
!MSXML.IXMLDOMNode categoriesFor: #formatAsText!public! !

"End of package definition"!

