	add: #ServerSocket2;
	add: #SOCKADDR;
	add: #SOCKADDR_IN;
	add: #SOCKADDR_IN6;
	add: #SOCKADDR_STORAGE;
	add: #Socket2;
	add: #SocketAbstract2;
	add: #SocketClosed;
	add: #SocketError;
	add: #SocketReadStream;
	add: #SocketWaitCancelled;
	add: #SocketWriteStream;
	add: #TIMEVAL;
	add: #WS2_32Library;
	add: #WSADATA;
	yourself.

package globalNames
	add: #WinSocketConstants;
	add: #WinSocketErrors;
	yourself.

package binaryGlobalNames: (Set new
	yourself).

package globalAliases: (Set new
	yourself).

package setPrerequisites: #(
	'..\Base\Dolphin').

package!

